{
    "name": "portrino/typo3-fractal-view",
    "description": "Integrates the fractal package (https://fractal.thephpleague.com/) into TYPO3 Extbase",
    "keywords": [
        "TYPO3",
        "extbase",
        "view",
        "json",
        "fractal"
    ],
    "homepage": "https://github.com/portrino/typo3-fractal",
    "support": {
        "issues": "https://github.com/portrino/typo3-fractal/issues"
    },
    "authors": [
        {
            "name": "AndrÃ© Wuttig",
            "email": "wuttig@portrino.de",
            "role": "Developer"
        }
    ],
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.5.0",

        "typo3/cms": "^7.6 || ^8.7",

        "league/fractal": "~0.17.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "~3.0.2",
        "phpstan/phpstan": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "Portrino\\Typo3FractalView\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Portrino\\Typo3FractalView\\Tests\\": "tests/"
        }
    },
    "config": {
        "vendor-dir": "build/vendor",
        "bin-dir": "build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "build/web"
        }
    }
}
